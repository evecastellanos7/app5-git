<?xml version="1.0" encoding="UTF-8"?>  

<widget xmlns = "http://www.w3.org/ns/widgets"
  xmlns:gap="http://phonegap.com/ns/1.0"
  id="com.phonegap.example5"
  version="1.0.0">
  
  <name> app5 Advertencias </name>
  
  <description>
  Aplicacion que muestra acciones del telefono celular
  </description>
  
  <author href="http:buil.phonegap.com" email="evelyncastellanos894@gmail.com">
  Evelyn Castellanos Gutierrez 4Â° E
  </author>
  
  <!--perzonaliza la aplicacion y plataforma-->
  <preference name="orientation" value="dafault"/>
  <!--<preference name="orietation" value="portrait"/>
  <preference name="orietation" value="landscape"/>-->
  <preference name="target-device" value="universal"/>
  <preference name="fullscreen" value="true"/>
  <preference name="android-installLocation" value="auto"/>
  <preference name="permissions" value="INTERNET"/>
  
  <!--plugins-->
  <!--core plugins-->
  <plugin name="cordova-plugin-device" spec="~1.1.4"/>
  <plugin name="cordova-plugin-vibration" spec="~2.1.3"/>
  <plugin name="cordova-plugin-dialogs" spec="~1.3.1"/>
  
  <!--plugin name="cordova-plugin-geolocation" source="npm"/>-->
    <!--third part plugins-->
	
	<!--para accesar a paginas en internet-->
	<allow-intent href="https://*/*"/>
	<acces origin="https://*/*"/>
	<allow-intent href="http://*/*"/>
	<acces origin="http://*/*"/>
	<plugin name="cordova-plugin-whitelist" source="npm"/>
	
	<!--colocar icono app-->
	
	<icon src="res/android/mdpi.png"/>
	
	</widget>
